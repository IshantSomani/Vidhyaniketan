<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/hand_embroidery_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:background="@android:color/transparent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView13"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/handembroidery"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent" />
    </FrameLayout>

    <TextView
        android:id="@+id/hand_embroidery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/hand_embroidery"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/craft_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:background="@android:color/transparent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView14"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/craft"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent" />
    </FrameLayout>

    <TextView
        android:id="@+id/craft_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/craft"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/cookery_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:background="@android:color/transparent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView15"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/cookery"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent" />
    </FrameLayout>

    <TextView
        android:id="@+id/cookery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/cookery"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/theatre_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:background="@android:color/transparent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView16"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/theatre"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent" />
    </FrameLayout>

    <TextView
        android:id="@+id/theatre_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/theatre"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/drawing_painting_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:background="@android:color/transparent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView17"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/theatre"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent" />
    </FrameLayout>

    <TextView
        android:id="@+id/drawing_painting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/drawing_and_painting"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/multimedia_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:background="@android:color/transparent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView18"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/multimedia"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent" />
    </FrameLayout>

    <TextView
        android:id="@+id/multimedia_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/multimedia"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>